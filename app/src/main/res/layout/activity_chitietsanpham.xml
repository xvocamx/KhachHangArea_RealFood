<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    tools:context=".ChiTietSanPham">

    <ImageView
        android:id="@+id/ivFood"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pizza" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza Tom Pho Mai"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_rate" />

                <TextView
                    android:id="@+id/tvTBRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="4.9"
                    android:textColor="@color/orange"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="1032"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ratings"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tvGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65,000"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" VNĐ"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnYeuThich"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_button_dangxuat"
                    android:drawableLeft="@drawable/ic_favorite_pink"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:text="@string/yeuthich"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />


                <ImageView
                    android:id="@+id/ivComment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/ic_chat" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivShop"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:background="@drawable/custom_button_dangxuat"
                android:padding="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo_pizza" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTenCuaHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Pizza Food"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnXemShop"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/custom_button_dangxuat"
                    android:drawableLeft="@drawable/ic_store"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:text="@string/xem_shop"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Mô tả"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tvMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit.
Ornare leo non mollis id cursus. Eu euismod faucibus in
leo malesuada" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Số lượng"
            android:textColor="@color/black" />

        <Button
            android:layout_width="52dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/custom_button"
            android:text="+"
            android:textColor="@color/white" />

        <EditText
            android:layout_width="52dp"
            android:layout_height="30dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/custom_edittext_orange"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/orange" />

        <Button
            android:layout_width="52dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_button"
            android:text="-"
            android:textColor="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDatHang"
        android:layout_width="96dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/custom_button"
        android:text="Dặt hàng"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Đánh giá sản phẩm"
        android:textColor="@color/black"
        android:textSize="20dp" />


</LinearLayout>